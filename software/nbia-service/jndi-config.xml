<jndiConfig xmlns="http://wsrf.globus.org/jndi/config">
  <global>
    <resource name="nciaDatabase" type="com.mchange.v2.c3p0.ComboPooledDataSource">
      <resourceParams>
        <parameter>
          <name>driverClass</name>
          <value>@databaseDriver@</value>
        </parameter>
        <parameter>
          <name>jdbcUrl</name>
          <value>@databaseConnectionUrl@</value>
        </parameter>
        <parameter>
          <name>user</name>
          <value>@databaseUser@</value>
        </parameter>
        <parameter>
          <name>password</name>
          <value>@databasePassword@</value>
        </parameter>
        <parameter>
          <name>factory</name>
          <value>org.apache.naming.factory.BeanFactory</value>
        </parameter>
        <parameter>
          <name>acquireRetryAttempts</name>
          <value>30</value>
        </parameter>
        <parameter>
          <name>acquireIncrement</name>
          <value>5</value>
        </parameter>
        <parameter>
          <name>idleConnectionTestPeriod</name>
          <value>9</value>
        </parameter>
        <parameter>
          <name>initialPoolSize</name>
          <value>5</value>
        </parameter>
        <parameter>
          <name>maxPoolSize</name>
          <value>20</value>
        </parameter>
        <parameter>
          <name>maxIdleTime</name>
          <value>14400</value>
        </parameter>
        <!-- 4 hours idle -->
        <parameter>
          <name>maxStatements</name>
          <value>50</value>
        </parameter>
        <!-- max statements in cache -->
        <parameter>
          <name>minPoolSize</name>
          <value>5</value>
        </parameter>
      </resourceParams>
    </resource>
  </global>

  <service name="SERVICE-INSTANCE-PREFIX/NBIAService">
    <resource name="configuration" type="gov.nih.nci.nbia.service.globus.resource.NBIAServiceResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/NBIAService_registration.xml</value>
        </parameter>
        <parameter>
          <name>domainModelFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the domainModel extract -->
          <value>ETC-PATH/nciaDomainModel.xml</value>
        </parameter>
        <parameter>
          <name>serviceMetadataFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the serviceMetadata extract -->
          <value>ETC-PATH/serviceMetadata.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="serviceconfiguration" type="gov.nih.nci.nbia.service.NBIAServiceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>etcDirectoryPath</name>
          <value>ETC-PATH</value>
        </parameter>
        <parameter>
          <name>queryProcessorClass</name>
          <value>@queryProcessorClass@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorClass</name>
          <value>@cql2QueryProcessorClass@</value>
        </parameter>
        <parameter>
          <name>sdk4Style_beansJarFileName</name>
          <value>@sdk4Style_beansJarFileName@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_applicationName</name>
          <value>@cqlQueryProcessorConfig_applicationName@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorConfig_applicationName</name>
          <value>@cql2QueryProcessorConfig_applicationName@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_queryCaseInsensitive</name>
          <value>@cqlQueryProcessorConfig_queryCaseInsensitive@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorConfig_queryCaseInsensitive</name>
          <value>@cql2QueryProcessorConfig_queryCaseInsensitive@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_useLocalApiFlag</name>
          <value>@cqlQueryProcessorConfig_useLocalApiFlag@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorConfig_useLocalApiFlag</name>
          <value>@cql2QueryProcessorConfig_useLocalApiFlag@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_ormJarName</name>
          <value>@cqlQueryProcessorConfig_ormJarName@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorConfig_ormJarName</name>
          <value>@cql2QueryProcessorConfig_ormJarName@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_applicationHostName</name>
          <value>@cqlQueryProcessorConfig_applicationHostName@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorConfig_applicationHostName</name>
          <value>@cql2QueryProcessorConfig_applicationHostName@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_applicationHostPort</name>
          <value>@cqlQueryProcessorConfig_applicationHostPort@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorConfig_applicationHostPort</name>
          <value>@cql2QueryProcessorConfig_applicationHostPort@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_useServiceLogin</name>
          <value>@cqlQueryProcessorConfig_useServiceLogin@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorClassuseServiceLogin</name>
          <value>@cql2QueryProcessorClassuseServiceLogin@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_useGridIdentityLogin</name>
          <value>@cqlQueryProcessorConfig_useGridIdentityLogin@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorClassuseGridIdentityLogin</name>
          <value>@cql2QueryProcessorClassuseGridIdentityLogin@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_staticLoginUsername</name>
          <value>@cqlQueryProcessorConfig_staticLoginUsername@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorClassstaticLoginUsername</name>
          <value>@cql2QueryProcessorClassstaticLoginUsername@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_staticLoginPassword</name>
          <value>@cqlQueryProcessorConfig_staticLoginPassword@</value>
        </parameter>
        <parameter>
          <name>cql2QueryProcessorClassstaticLoginPassword</name>
          <value>@cql2QueryProcessorClassstaticLoginPassword@</value>
        </parameter>
        <parameter>
          <name>serverConfigLocation</name>
          <value>ETC-PATH/@serverConfigLocation@</value>
        </parameter>
        <parameter>
          <name>dataService_cqlValidatorClass</name>
          <value>@dataService_cqlValidatorClass@</value>
        </parameter>
        <parameter>
          <name>dataService_domainModelValidatorClass</name>
          <value>@dataService_domainModelValidatorClass@</value>
        </parameter>
        <parameter>
          <name>dataService_validateCqlFlag</name>
          <value>@dataService_validateCqlFlag@</value>
        </parameter>
        <parameter>
          <name>dataService_validateDomainModelFlag</name>
          <value>@dataService_validateDomainModelFlag@</value>
        </parameter>
        <parameter>
          <name>dataService_cql2ValidatorClasses</name>
          <value>@dataService_cql2ValidatorClasses@</value>
        </parameter>
        <parameter>
          <name>dataService_classMappingsFilename</name>
          <value>ETC-PATH/@dataService_classMappingsFilename@</value>
        </parameter>
        <parameter>
          <name>dataServicetransferDiskBufferDir</name>
          <value>@dataServicetransferDiskBufferDir@</value>
        </parameter>
        <parameter>
          <name>cqlQueryProcessorConfig_domainTypesInfoFilename</name>
          <value>ETC-PATH/@cqlQueryProcessorConfig_domainTypesInfoFilename@</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="gov.nih.nci.nbia.service.globus.resource.NBIAServiceResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
      </resourceParams>
    </resource>
  </service>
</jndiConfig>

